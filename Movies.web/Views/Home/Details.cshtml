@model Movie
@{
    ViewData["Title"] = "Details";
}


       
    
                <div class="row">
                    <div class="col-lg-12">
                        <div class="iq-card">
                            <div class="iq-card-body">
                                <div class="row">
                                    <div class="col-md-6 iq-item-product-left">
                                        <div class="iq-image-container">
                                            <div class="iq-product-cover d-flex justify-content-center">
                                                <img src="@Model.Poster" alt="product-image" class="img-fluid">
                                            </div>
                                       
                                        </div>
                                    </div>
                                    <div class="col-md-6 iq-item-product-right">
                                        <div class="product-additional-details">
                                            <h3 class="productpage_title">@Model.Title</h3>
                                            <p>@Model.Genre</p>

                                            <div class="product-descriptio">
                                                <p>@Model.Plot</p>
                                            </div>

                                            <div class="shipping">
                                                <p class="mb-0">rating: <span><b> @Model.imdbRating</b></span></p>
                                            </div>
                                            <div class="shipping">
                                                <p class="mb-0">actors: <span><b> @Model.Actors</b></span></p>
                                            </div>
                                            <div class="shipping">
                                                <p class="mb-0">director: <span><b> @Model.Director</b></span></p>
                                            </div>
                                            <div class="shipping">
                                                <p class="mb-0">writers: <span><b> @Model.Writer</b></span></p>
                                            </div>
                                            <div class="shipping">
                                                <p class="mb-0">awards: <span><b> @Model.Awards</b></span></p>
                                            </div>
                                            <div class="shipping">
                                                <p class="mb-0">imdb Votes: <span><b> @Model.imdbVotes</b></span></p>
                                            </div>
                                            <div class="shipping">
                                                <p class="mb-0">language: <span><b> @Model.Language</b></span></p>
                                            </div>
                                            <div class="shipping">
                                                <p class="mb-0">total Seasons: <span><b> @Model.totalSeasons</b></span></p>
                                            </div>
                                        </div>
                                    </div>
                              
                                  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        
   


